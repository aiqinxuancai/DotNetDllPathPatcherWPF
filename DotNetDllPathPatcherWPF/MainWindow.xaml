<Window x:Class="DotNetDllPathPatcherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotNetDllPathPatcherWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500" AllowDrop="True" Drop="mainGrid_Drop" >
    <Grid x:Name="mainGrid" DragEnter="mainGrid_DragEnter" >
        <StackPanel Margin="10,10,10,10" >
            <TextBlock Text="转换路径（支持拖放）"></TextBlock>
            <TextBox x:Name="pathTextBox" MinHeight="28" Margin="0,5,0,0" />
            <Button x:Name="runButton" Content="执行" MinHeight="28" Margin="0,5,0,0" Click="runButton_Click"></Button>
            
        </StackPanel>
        
    </Grid>
</Window>
